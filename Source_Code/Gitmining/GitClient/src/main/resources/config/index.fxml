<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<Group xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="edu.nju.ui.control.IndexPanel">
  <children>
    <BorderPane prefHeight="720.0" prefWidth="1080.0">
      <center>
        <BorderPane fx:id="pane" prefHeight="670.0" prefWidth="1080.0" BorderPane.alignment="CENTER" />
      </center>
      <top>
        <Group>
          <children>
            <ImageView disable="true" fitHeight="30.0" fitWidth="1080.0" pickOnBounds="true" smooth="false">
              <image>
                <Image url="@../pictures/bar.png" />
              </image>
            </ImageView>
            <HBox fx:id="box" alignment="BOTTOM_LEFT" maxHeight="30.0" prefHeight="30.0" prefWidth="1080.0">
              <children>
                <Button fx:id="taskButton" onAction="#setPanel" opacity="0.2" prefHeight="30.0" prefWidth="100.0" text="Task1" textAlignment="CENTER" textFill="RED" />
                <Group fx:id="addChildren">
                  <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true">
                      <image>
                        <Image url="@../pictures/button/addTak.png" />
                      </image>
                    </ImageView>
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addTask" opacity="0.0" prefHeight="30.0" prefWidth="30.0" text="+" />
                  </children>
                </Group>
              </children>
            </HBox>
          </children>
        </Group>
      </top>
    </BorderPane>
    <ImageView fx:id="image" fitHeight="720.0" fitWidth="1080.0" pickOnBounds="true" visible="false">
      <image>
        <Image url="@../pictures/back1.png" />
      </image>
    </ImageView>
  </children>
</Group>

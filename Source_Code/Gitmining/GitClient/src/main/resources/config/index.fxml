<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<Group xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.nju.ui.control.IndexPanel">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1080.0">
         <top>
            <Group>
               <children>
                  <ImageView disable="true" fitHeight="30.0" fitWidth="1080.0" pickOnBounds="true" smooth="false">
                     <image>
                        <Image url="@../pictures/bar.png" />
                     </image>
                  </ImageView>
                  <HBox fx:id="box" alignment="BOTTOM_LEFT" maxHeight="30.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="taskButton" onAction="#setPanel" opacity="0.2" prefHeight="30.0" prefWidth="100.0" text="Task1" textAlignment="CENTER" textFill="RED" />
                        <Group fx:id="addChildren">
                           <children>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true">
                                 <image>
                                    <Image url="@../pictures/button/addTak.png" />
                                 </image>
                              </ImageView>
                              <Button fx:id="addButton" mnemonicParsing="false" onAction="#addTask" opacity="0.0" prefHeight="30.0" prefWidth="30.0" text="+" />
                           </children>
                        </Group>
                     </children>
                  </HBox>
               </children>
            </Group>
         </top>
         <center>
            <BorderPane fx:id="pane" prefHeight="670.0" prefWidth="1080.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <ImageView fx:id="image" fitHeight="720.0" fitWidth="1080.0" nodeOrientation="INHERIT" pickOnBounds="true">
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <image>
            <Image url="@../pictures/back1.png" />
         </image>
      </ImageView>
   </children>
</Group>
